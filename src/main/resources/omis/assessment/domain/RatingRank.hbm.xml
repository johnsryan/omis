<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="omis.assessment.domain">
	<class	entity-name="omis.assessment.domain.RatingRank"
			proxy="omis.assessment.domain.RatingRank"
			name="omis.assessment.domain.impl.RatingRankImpl"
			table="`RATING_RANK`">
		<id name="id" type="java.lang.Long" column="`ID`">
			<generator class="sequence">
				<param name="sequence">`RATING_RANK_SEQ`</param>
			</generator>
		</id>
		<property name="name" column="`NAME`" type="java.lang.String" not-null="true"/>
		<property name="valid" column="`VALID`" type="yes_no" not-null="true"/>
		<many-to-one name="ratingCategory" column="`RATING_CATEGORY_ID`" entity-name="omis.assessment.domain.RatingCategory" />
		<component name="creationSignature">
			<many-to-one name="userAccount" column="`CREATE_ACCOUNT_ID`"
			             not-null="true"/>
			<property name="date" column="`CREATE_DATE`" not-null="true"/>
		</component>
		<component name="updateSignature">
			<many-to-one name="userAccount" column="`UPDATE_ACCOUNT_ID`"
			             not-null="true"/>
			<property name="date" column="`UPDATE_DATE`" not-null="true"/>
		</component>
	</class>
	<query name="findRatingRank"><![CDATA[
		select ratingRank
		from omis.assessment.domain.RatingRank ratingRank
		where
			ratingRank.name = :name
		and
			ratingRank.ratingCategory = :ratingCategory
	]]></query>
	<query name="findRatingRankExcluding"><![CDATA[
		select ratingRank
		from omis.assessment.domain.RatingRank ratingRank
		where
			ratingRank.name = :name
		and
			ratingRank.ratingCategory = :ratingCategory
		and
			ratingRank <> :excludedRatingRank
	]]></query>
</hibernate-mapping>