<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="omis.hearinganalysis.domain">
	<class	entity-name="omis.hearinganalysis.domain.HearingAnalysis"
			proxy="omis.hearinganalysis.domain.HearingAnalysis"
			name="omis.hearinganalysis.domain.impl.HearingAnalysisImpl"
			table="`HEARING_ANALYSIS`">
		<id name="id" type="java.lang.Long" column="`ID`">
			<generator class="sequence">
				<param name="sequence">`HEARING_ANALYSIS_SEQ`</param>
			</generator>
		</id>
		<many-to-one name="eligibility" entity-name="omis.paroleeligibility.domain.ParoleEligibility" not-null="true" column="`ELIGIBILITY_ID`"/>
		<many-to-one name="paroleBoardItinerary" entity-name="omis.paroleboarditinerary.domain.ParoleBoardItinerary" not-null="true" column="`PAROLE_BOARD_ITINERARY_ID`"/>
		<many-to-one name="category" entity-name="omis.hearinganalysis.domain.HearingAnalysisCategory" not-null="true" column="`HEARING_ANALYSIS_CATEGORY_ID`"/>
		<many-to-one name="analyst" entity-name="omis.paroleboarditinerary.domain.BoardAttendee" not-null="false" column="`BOARD_ATTENDEE_ID`"/>
		<property name="expectedCompletionDate" column="`EXPECTED_COMPLETION_DATE`" type="java.util.Date" not-null="false" />
		<component name="creationSignature">
			<many-to-one name="userAccount" column="`CREATE_ACCOUNT_ID`"
			             not-null="true"/>
			<property name="date" column="`CREATE_DATE`" not-null="true"/>
		</component>
		<component name="updateSignature">
			<many-to-one name="userAccount" column="`UPDATE_ACCOUNT_ID`"
			             not-null="true"/>
			<property name="date" column="`UPDATE_DATE`" not-null="true"/>
		</component>
	</class>
	<query name="findHearingAnalysis"><![CDATA[
		select hearingAnalysis
		from omis.hearinganalysis.domain.HearingAnalysis hearingAnalysis
		where
			hearingAnalysis.eligibility = :eligibility
		and
			hearingAnalysis.paroleBoardItinerary = :paroleBoardItinerary
		and
			hearingAnalysis.analyst = :analyst
		and
			hearingAnalysis.category = :category
	]]></query>
	<query name="findHearingAnalysisExcluding"><![CDATA[
		select hearingAnalysis
		from omis.hearinganalysis.domain.HearingAnalysis hearingAnalysis
		where
			hearingAnalysis.eligibility = :eligibility
		and
			hearingAnalysis.paroleBoardItinerary = :paroleBoardItinerary
		and
			hearingAnalysis.analyst = :analyst
		and
			hearingAnalysis.category = :category
		and
			hearingAnalysis <> :excludedHearingAnalysis
	]]></query>
	<query name="findHearingAnalysisByParoleEligibility"><![CDATA[
		select hearingAnalysis
		from omis.hearinganalysis.domain.HearingAnalysis hearingAnalysis
		where
			hearingAnalysis.eligibility = :eligibility
	]]></query>
</hibernate-mapping>